<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DashboardFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <ProgressBar
                    android:id="@+id/products_pro"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progressbar" />

                <TextView
                    android:id="@+id/tvProductsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="20dp"
                    android:text="Products"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <ProgressBar
                    android:id="@+id/brands_pro"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progressbar" />

                <TextView
                    android:id="@+id/tvBrandsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="20dp"
                    android:text="Brands"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />


            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <ProgressBar
                    android:id="@+id/notice_pro"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progressbar" />

                <TextView
                    android:id="@+id/tvNoticeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="17dp"
                    android:text="   Less\nProducts"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <ProgressBar
                    android:id="@+id/expiring_pro"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progressbar" />

                <TextView
                    android:id="@+id/tvExpiringCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="20dp"
                    android:text="Expiring"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />


            </FrameLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="300dp">



        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>